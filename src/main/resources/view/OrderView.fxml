<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mftplus.controller.OrderController"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="🧾 Order Management"
               style="-fx-font-size: 26; -fx-font-weight: bold; -fx-padding: 20 0 10 0; -fx-alignment: center;"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" padding="20">
            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="customerIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Order Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="orderDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Total Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="totalAmountField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER" padding="10">
                <Button text="💾 Save" onAction="#saveOrder"/>
                <Button text="✏️ Edit" onAction="#editOrder"/>
                <Button text="🗑️ Delete" onAction="#deleteOrder"/>
                <Button text="🔍 Find All" onAction="#findAllOrders"/>
                <Button text="↩️ Clear" onAction="#clearFields"/>
            </HBox>

            <TableView fx:id="orderTable" prefHeight="300" prefWidth="850">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="customerIdColumn" text="Customer ID" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Order Date" prefWidth="200"/>
                    <TableColumn fx:id="amountColumn" text="Total Amount" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
