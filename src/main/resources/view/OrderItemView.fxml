<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mftplus.controller.OrderItemController"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="📦 Order Items"
               style="-fx-font-size: 26; -fx-font-weight: bold; -fx-padding: 20 0 10 0; -fx-alignment: center;"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" padding="20">

            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <Label text="Order ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="orderIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Product ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="productIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Quantity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="quantityField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER" padding="10">
                <Button text="💾 Save" onAction="#saveItem"/>
                <Button text="✏️ Edit" onAction="#editItem"/>
                <Button text="🗑️ Delete" onAction="#deleteItem"/>
                <Button text="🔍 Find All" onAction="#findAllItems"/>
                <Button text="↩️ Clear" onAction="#clearFields"/>
            </HBox>

            <TableView fx:id="itemTable" prefHeight="300" prefWidth="850">
                <columns>
                    <TableColumn fx:id="idColumn" text="Item ID" prefWidth="100"/>
                    <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="150"/>
                    <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="150"/>
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="150"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>